{
  "extends": "./tsconfig.json",
  "files": [],
  "compilerOptions": {
    "composite": true,
    "baseUrl": "./packages",
    "module": "commonjs",
    "target": "ES2020",
    "moduleResolution": "node",
    "rootDir": ".",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "emitDeclarationOnly": true,
    "paths": {
      "@force-bridge/*": ["./*/src"]
    }
  },
  "references": [
    {
      "path": "./packages/commons/tsconfig.build.json"
    }
  ]
}
